<h1>Rate your experience</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= simple_form_for [@purchase, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
        <%= f.submit "Submit Review" class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
