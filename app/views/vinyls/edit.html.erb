<div class="container-1">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h1>Edit a Vinyl</h1>
      <%= simple_form_for [@vinyl] do |f| %>
      <%= f.input :name, label: "Title" %>
      <%= f.input :artist, label: "Artist" %>
      <%= f.input :genre, label: "Genre", collection: ["Avant-Garde", "Blues", "Classical", "Comedy/Spoken", "Country", "Electronic", "Folk", "International", "Jazz", "Latin", "New Age", "Pop/Rock", "R&B", "Rap", "Raggae" ]%>
      <%= f.input :price, label: "Price (Â£)" %>
      <%= f.input :year, label: "Release year" %>
      <%= f.input :media_link, label: "Media link", hint: "Paste a Spotify Album URI", placeholder: "e.g spotify:album:5WupqgR68HfuHt3BMJtgun" %>
      <%= f.input :description, label: "Description" %>
      <%= f.input :condition, label: "Condition", collection: ["New", "Used - Like New", "Used - Very Good", "Used - Good", "Used - Acceptable"]%>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: "btn btn-primary", style: "margin-bottom: 10px;"  %>
      <% end %>
      <%= link_to "Delete", vinyl_path(@vinyl), method: :delete, class: 'btn btn-danger', style: "margin-bottom: 10px;" %>
    </div>
  </div>
</div>




