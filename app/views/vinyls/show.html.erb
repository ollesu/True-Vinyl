        <%= link_to "buy now", edit_vinyl_path(@vinyl), class: 'btn btn-danger'%>

      </div>
      <div>
        <hr>
      </div>
      <div>
        <img class="avatar-bordered" alt="avatar-bordered" style="width: 76px" src="https://kitt.lewagon.com/placeholder/users/kierand0yle" />

        <h3>Kieran</h3>

        <div style="color: #FA2B57">
