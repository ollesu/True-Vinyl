<div class="container" style="margin-bottom: 20px">

  <%= form_tag vinyls_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search for a vinyl name" %>
  <% end %>

  <%= simple_form_for :search, url: vinyls_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <!-- <i class="fas fa-search"></i> --> <i class="fas fa-compact-disc"></i> Search vinyls
    </button>
  </div>
<% end %>

  <h1>Displaying Results</h1>

  <div class="cards">
    <% @vinyls.each do |vinyl| %>
      <%= link_to vinyl_path(vinyl) do %>
        <div class="card-full">
          <div class="card-full-infos">
            <div>
              <h2><%= vinyl.name %></h2>
              <p><%= vinyl.artist %></p>
            </div>
            <h2 class="card-full-pricing">Â£ <%= vinyl.price %></h2>
          </div>
            <%= cl_image_tag vinyl.photo %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
