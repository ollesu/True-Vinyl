<h1 class="text-center">My vinyls</h1>

<div class="container" style="margin-top: 20px; margin-bottom: 20px">
  <div class="cards">
    <% @user.vinyls.each do |vinyl| %>
       <div class="card-full">
        <div class="card-full-infos">
          <div>
            <h2><%= vinyl.name %></h2>
            <p><%= vinyl.artist %></p>
          </div>
          <h2 class="card-full-pricing">Â£ <%= vinyl.price %></h2>
        </div>
          <%= link_to "Edit", edit_vinyl_path(vinyl), class: 'vinyl-button btn btn-primary' %>
          <%= link_to "Delete", vinyl_path(vinyl), method: :delete, class: 'vinyl-button-delete btn btn-primary' %>
          <%= link_to vinyl_path(vinyl) do %>
            <%= cl_image_tag vinyl.photo, height: 350, width: 350, crop: :fill %>
            <% end %>
      </div>

    <% end %>
  </div>
</div>
