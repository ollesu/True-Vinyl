<div class="container-1">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h1>Upload a Vinyl</h1>
      <%= simple_form_for [@vinyl, @user] do |f| %>
      <%= f.input :name, label: "Title" %>
      <%= f.input :genre, label: "Genre", collection: ["Avant-Garde", "Blues", "Classical", "Comedy/Spoken", "Country", "Electronic", "Folk", "International", "Jazz", "Latin", "New Age", "Pop/Rock", "R&B", "Rap", "Raggae" ]%>
      <%= f.input :price, label: "Price (Â£)" %>
      <%= f.input :artist, label: "Artist" %>
      <%= f.input :year, label: "Release year" %>
      <%= f.input :media_link, label: "Media link" %>
      <%= f.input :description, label: "Description" %>
      <%= f.input :condition, label: "Condition", collection: ["New", "Used - Like New", "Used - Very Good", "Used - Good", "Used - Acceptable"]%>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>




